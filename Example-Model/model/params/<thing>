'Parameters
(define <thing>-parameters
  (list
    (list 'mass '<uninitialized>)
    (list 'dim '<uninitialized>)
    (list 'location '<uninitialized>)
    (list 'direction '<uninitialized>)
    (list 'speed '<uninitialized>)
  )
)
(set! global-parameter-alist (cons (cons <thing> <thing>-parameters) global-parameter-alist))
